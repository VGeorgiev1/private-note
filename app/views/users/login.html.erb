<link rel="stylesheet" type="text/css" href="main.css">
<div id="bg">
    <div class="module">
    <%= form_tag '/login', {class: 'form'} do %>
        <p>Login</p>
        <%= text_field_tag 'username', nil, :class=> 'textbox', :placeholder=> "Username" %>
        <br>
        <%= password_field_tag 'password',nil, :class=> 'textbox', :placeholder=> "Password" %>
        <br>
        <%= link_to "Register", '/', {class: 'button'} %>
        <%= submit_tag "Login",{class: 'button'} %>
    <% end %>
    </div>
    <p><%= @error =%></p>
</div>    